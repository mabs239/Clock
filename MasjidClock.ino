void setup() {

  Serial.begin(9600);
  while (!Serial) {

  }
  lcd.begin(16, 2);//columns and rows:
  lcd.print(" \n Allah \n");
  lcd.setCursor(0, 1);

  day = 1;
  month = 1;
}

void loop() {

  int dayIndex = day + ((month - 1) << 5);

  delay(5000);

  uint8_t val =  pgm_read_word(&fajar[dayIndex]);
  fajar2dayMin =  val & 63; // lower 6 bits are minutes
  fajar2dayHr = (val >> 6) + 3; //upper 2 bits are hours + 3 is hour offset for fajar
  val =  pgm_read_word(&sunrise[dayIndex]);
  sunrise2dayMin = val & 63;
  sunrise2dayHr = (val >> 6) + 4;

  val =  pgm_read_word(&zawal[dayIndex]);
  zawal2dayMin = val & 63;
  zawal2dayHr = (val >> 6) + 11;
  //Offsets in hours: Fajr=3    Sunrise=4   Zawal=11   Zuhr=11    Asr=3   Maghrib=5   Isha=6
  val =  pgm_read_word(&zohar[dayIndex]);
  zohar2dayMin = val & 63;
  zohar2dayHr = (val >> 6) + 11;
  val =  pgm_read_word(&asar[dayIndex]);
  asar2dayMin = val & 63;
  asar2dayHr = (val >> 6) + 3;
  val =  pgm_read_word(&maghrab[dayIndex]);
  maghrab2dayMin = val & 63;
  maghrab2dayHr = (val >> 6) + 5;
  val =  pgm_read_word(&isha[dayIndex]);
  isha2dayMin = val & 63;
  isha2dayHr = (val >> 6) + 6;

  char buf [16] ; // large enough for biggest long int
  sprintf (buf, "%02i%02i%02i%02i%02i%02i%02i%02i \n", day, fajar2dayHr, sunrise2dayHr, zawal2dayHr, zohar2dayHr, asar2dayHr, maghrab2dayHr, isha2dayHr) ; // leading zeroes, at least 4 chars.
  Serial.print (buf) ;
  lcd.setCursor(0, 0);
  lcd.print(buf);
  sprintf (buf, "%02i%02i%02i%02i%02i%02i%02i%02i", month, fajar2dayMin, sunrise2dayMin, zawal2dayMin, zohar2dayMin, asar2dayMin, maghrab2dayMin, isha2dayMin) ; // leading zeroes, at least 4 chars.
  Serial.print (buf) ;
  lcd.setCursor(0, 1);
  lcd.print(buf);

  day = day + 1;
  if (day > 31) {
    day = 1;
    month = month + 1;
    if (month > 12) month = 0;
  }
}
