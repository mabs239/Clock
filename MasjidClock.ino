void set2dayTimes() {
  //day = 17;
  int dayIndex = day + ((month - 1) << 5);
  fajar2dayMin =  pgm_read_word(&fajar[dayIndex]) & 63;
  fajar2dayHr = pgm_read_word(&fajar[dayIndex]) >> 6 + 3;
  sunrise2dayMin = pgm_read_word(&sunrise[dayIndex]) & 63;
  sunrise2dayHr = pgm_read_word(&sunrise[dayIndex]) >> 6 + 4;


  zawal2dayMin = zawal[dayIndex] & 63;
  zawal2dayHr = (zawal[dayIndex] >> 6) + 11;
  //Fajr=3    Sunrise=4   Zawal=11   Zuhr=11    Asr=3   Maghrib=5   Isha=6
  zohar2dayMin = zohar[dayIndex] & 63;
  zohar2dayHr = (zohar[dayIndex] >> 6) + 11;
  asar2dayMin = asar[dayIndex] & 63;
  asar2dayHr = (asar[dayIndex] >> 6) + 3;
  maghrab2dayMin = maghrab[dayIndex] & 63;
  maghrab2dayHr = (maghrab[dayIndex] >> 6) + 5;
  isha2dayMin = isha[dayIndex] & 63;
  isha2dayHr = (isha[dayIndex] >> 6) + 6;

  //  String out="Do you feel " + std::string(day) + " years old?"
  Serial.println("\n Allah");
  Serial.println(String("") + day + "-" + month + "-" + "2022" + " dayIndex" + dayIndex);
  Serial.println(String("") + "  " + (fajar2dayHr) + "  " + sunrise2dayHr + " " + zawal2dayHr + " " + zohar2dayHr + "  " + asar2dayHr + "  " + maghrab2dayHr + "  " + isha2dayHr);
  Serial.println(String("") + " " + (fajar2dayMin) + " " + sunrise2dayMin + " " + zawal2dayMin + " " + zohar2dayMin + " " + asar2dayMin + " " + maghrab2dayMin + " " + isha2dayMin);
}
